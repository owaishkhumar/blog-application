<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>HomePage</title>
</head>
<body>
    <%- include('./partials/nav') %>
    <div class="container mt-4">
        <h1><%= blog.title %></h1>
        <img class="mt-3" src="<%= blog.coverImageURL %>" width="1000px" height="500px" >
        <pre class="mt-3"><%= blog.body %></pre>
    </div>
    <div class="container mt-4">
        <img src="<%= blog.createdBy.profileImage %>" alt="Profile Image" width="30px">
        <span><%= blog.createdBy.fullName %></span>
    </div>
    <div class="container mt-4">
        <h3>Comments (<%= comments.length %>)</h3>
        <% if (locals.user) { %>
            <form action="/blog/comment/<%= blog._id %>" method="post">
                <div class="mb-3">
                    <textarea name="content" class="form-control" id="body" placeholder="Enter your comment"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Add</button>
            </form>
        <% } %>
    </div>
    <div class="container mt-3">
        <% comments.forEach(comment => { %>
            <div>
                <img src="<%= comment.createdBy.profileImage %>" alt="Profile Image" width="30px">
                <span><%= comment.createdBy.fullName %></span>
                <pre><%= comment.content %></pre>
            </div>
        <% }) %>
    </div>
    <%- include('./partials/script') %>
</body>
</html>